import "wich.stg"
import "wich-llvm-include.stg"

LLVMBinaryFloatOpMap ::= [
	"*":"fmul",
	"/":"fdiv",
	"+":"fadd",
	"-":"fsub",
	">":"fcmp ogt",
	">=":"fcmp oge",
	"<":"fcmp olt",
	"<=":"fcmp ole",
	"==":"fcmp oeq",
	"!=":"fcmp one",
	"&&":"and",
	"||":"or"
]

LLVMBinaryIntOpMap ::= [
	"*":"mul",
	"/":"div",
	"+":"add",
	"-":"sub",
	">":"icmp sgt",
	">=":"icmp sge",
	"<":"icmp slt",
	"<=":"icmp sle",
	"==":"icmp eq",
	"!=":"icmp ne",
	"&&":"and",
	"||":"or"
]

File(f, functions, main) ::= <<
<include()>

<functions>
<main>
>>

MainFunc(f,returnType,args,body) ::= <<
define i32 @main(i32 %argc, i8** %argv) {
entry:
%retval_ = alloca i32
%argc_ = alloca i32
%argv_ = alloca i8**
store i32 0, i32* %retval_
store i32 %argc, i32* %argc_
store i8** %argv, i8*** %argv_
<body>
}
<\n>
>>

Func(f,returnType,args,body) ::= <<
define <returnType> @<f.name>(<args;separator=", ">) {
entry:
<args:argAlloc();separator="\n">
<body>
}
<\n>
>>

ArgDef(arg,type) ::= "<type> %<arg.name>"

argAlloc(arg) ::= <<
%<arg.arg.name>_ = alloca <arg.type>
store <arg.type> %<arg.arg.name>, <arg.type>* %<arg.arg.name>_
>>

FuncBlock(b,varDefs,stats,initialize,terminate)::= <<
<initialize; separator="\n">
<varDefs; separator="\n">
<stats; separator="\n">
<terminate; separator="\n">
>>

Block(b,varDefs,stats,initialize,terminate)::= <<
<varDefs; separator="\n">
<stats; separator="\n">
<terminate; separator="\n">
>>

WhileStat(w,condition, stat) ::= <<
br label %while.block_entry_<w.num>
while.block_entry_<w.num>:
<condition>
br i1 %<condition.e.varRef>, label %while.block_body_<w.num>, label %while.block_exit_<w.num>
while.block_body_<w.num>:
<stat>
br label %while.block_entry_<w.num>
while.block_exit_<w.num>:
>>

VarInitStat(v,varRef,expr,type) ::= <<
<expr>
store <type> %<expr.e.varRef>, <type>* %<v.name>_
>>

AssignStat(v,varRef,expr,type)::= <<
<expr>
store <type> %<expr.e.varRef>, <type>* %<v.name>_
>>

VarDefStat(v,type) ::= <<
%<v.name>_ = alloca <type>
>>
StringVarDefStat ::= VarDefStat
VectorVarDefStat ::= VarDefStat

IfStat(i,condition,stat,elseStat) ::= <<
<condition>
br i1 %<condition.e.varRef>, label %if.block_true_<i.num>, label %if.block_false_<i.num>
if.block_true_<i.num>:
<stat>
br label %if.block_exit_<i.num>
if.block_false_<i.num>:
<elseStat>
br label %if.block_exit_<i.num>
if.block_exit_<i.num>:
>>

ReturnStat(r,expr,returnType)  ::= <<
<expr>
store <returnType> %<expr.e.varRef>, <returnType>* %retval_
br label %ret_
return.exit_<r.num>:
>>

CallStat(c,callExpr) ::=<<
<callExpr>
>>

ElementAssignStat(e,varRef,index,expr) ::= <<
<varRef>
<index>
%index_<index.e.varRef> = sub i32 %<index.e.varRef>, 1
<expr>
call void (%struct.PVector_ptr,i32,double) @set_ith(%struct.PVector_ptr %<varRef.e.varRef>, i32 %index_<index.e.varRef>, double %<expr.e.varRef>)
>>

BlockStatement(b,block) ::= <<
<block>
>>

IntLiteral(e,type)	::= <<
%<e.varRef> = add i32 <e.value>, 0
>>

FloatLiteral(e,type)	::= <<
%<e.varRef> = fadd double <e.value>, 0.00
>>

TrueLiteral(t,type) ::= "<t.value>"
FalseLiteral(f,type) ::="<f.value>"
VarRef(e,type)		::= <<
%<e.varRef> = load <type>, <type>* %<e.name>_
>>

HeapVarRef(e,type)	::= <<
%<e.varRef> = load <type>, <type>* %<e.name>_
>>

StringLiteral(s,type) ::= <<
String_new(<s.literal>)
>>

VectorLiteral(e,elems,type) ::= <<
%<e.varRef> = alloca [<e.vectorLength> x double]
<elems:elementAlloc(); separator="\n">
%vec_ptr_<e.varRef> = getelementptr [<e.vectorLength> x double], [<e.vectorLength> x double]* %<e.varRef>, i64 0, i64 0
%vec_new_<e.varRef> = call %struct.PVector_ptr @PVector_new(double* %vec_ptr_<e.varRef>, i64 <e.vectorLength>)
>>

elementAlloc(expr) ::= <<
%<expr.e.varRef>_ = getelementptr [3 x double], [3 x double]* %<expr.e.vecRef>, i64 0, i64 <expr.e.index>
<expr>
store double %<expr.e.varRef>, double* %<expr.e.varRef>_
>>

VectorElement(e, expr, type) ::= "<expr>"

BinaryPrimitiveOp(e,left,right,type) ::= <<
<left>
<right>
%<e.varRef> = <LLVMBinaryIntOpMap.(e.wichOp)> i32 %<left.e.varRef>, %<right.e.varRef>
>>

BinaryFloatOp(e,left,right,type) ::= <<
<left>
<right>
%<e.varRef> = <LLVMBinaryFloatOpMap.(e.wichOp)> <type> %<left.e.varRef>, %<right.e.varRef>
>>

BinaryIntOp(e,left,right,type) ::= <<
<left>
<right>
%<e.varRef> = <LLVMBinaryIntOpMap.(e.wichOp)> <type> %<left.e.varRef>, %<right.e.varRef>
>>

BinaryStringOp(e, left, right,type)  ::= "<CStringBinaryOpMap.(op.wichOp)>(<left>,<right>)"
BinaryVectorOp(e, left, right,type)  ::= "<CVectorBinaryOpMap.(op.wichOp)>(<left>,<right>)"

FuncCall(e,args,type) ::= <<
<args;separator="\n">
%<e.varRef> = call <type> (<args:argType();separator=",">) @<e.funcName>(<args:argPass();separator=",">)
>>

argType(arg) ::= <<
<arg.type>
>>

argPass(arg) ::= <<
<arg.type> %<arg.e.varRef>
>>

FloatFromInt(e,expr,type) ::= <<
<expr>
%<e.varRef> = sitofp i32 %<expr.e.varRef> to double
>>

VoidType(v) ::= "void"
IntType(t) ::= "i32"
FloatType(t) ::= "double"
VectorType(t) ::= "%struct.PVector_ptr"
StringType(t) ::= "String *"
BooleanType(t) ::= "i1"
TmpVarDef(t,type) ::="<typeMo> tmp<t.varIndex>;"

BlockTermination(term,type) ::= <<
br label %ret__
ret__:
br label %ret_

ret_:
%retval = load <type>, <type>* %retval_
ret <type> %retval
>>

BlockTerminationVoid(term,type) ::= <<
br label %ret__
ret__:
br label %ret_

ret_:
ret void
>>

BlockInitialization(init,type) ::= <<
%retval_ = alloca <type>
>>

PrintNewLine(p) 		  ::= <<printf("\n");>>
PrintStringStat(ps,expr)  ::= <<print_string(<expr>);>>
PrintVectorStat(pv,expr)  ::= <<
<expr>
call void (%struct.PVector_ptr) @print_pvector(%struct.PVector_ptr %<expr.e.varRef>)
>>
PrintIntStat(pi,expr) ::= <<
<expr>
%pi_<pi.num> = call i32 (i8*, ...) @printf(i8* getelementptr ([4 x i8], [4 x i8]* @pi.str, i64 0, i64 0), i32 %<expr.e.varRef>)
>>
PrintFloatStat(pf,expr) ::= <<
<expr>
%pf_<pf.num> = call i32 (i8*, ...) @printf(i8* getelementptr ([7 x i8], [7 x i8]* @pf.str, i64 0, i64 0), double %<expr.e.varRef>)
>>
PrintBooleanStat(pb,expr) ::= <<
<expr>
%pb_<pb.num> = call i32 (i8*, ...) @printf(i8* getelementptr ([4 x i8], [4 x i8]* @pi.str, i64 0, i64 0), i1 %<expr.e.varRef>)
>>